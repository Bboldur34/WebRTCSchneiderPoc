<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:webRtc="clr-namespace:WebRTCme.Middleware.Xamarin;assembly=WebRTCme.Middleware.Xamarin"
             Shell.NavBarIsVisible="False"
             x:Class="DemoApp.Views.VideoCallPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightGray">
            <webRtc:Media Stream="{Binding LocalStream}"  Label="{Binding LocalLabel}" 
                          VideoMuted="{Binding LocalVideoMuted}" AudioMuted="{Binding LocalAudioMuted}" 
                          IsCamera="True"
                          BackgroundColor="Orange" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <webRtc:Media Stream="{Binding Remote1Stream}" Label="{Binding Remote1Label}"
                          VideoMuted="{Binding Remote1VideoMuted}" AudioMuted="{Binding Remote1AudioMuted}"
                          IsCamera="False"
                          BackgroundColor="Navy" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <!--<StackLayout Orientation="Horizontal">
                <Button Text="End call" Command="{Binding EndCallCommand}"/>
            </StackLayout>-->


        </StackLayout>
    </ContentPage.Content>
</ContentPage>