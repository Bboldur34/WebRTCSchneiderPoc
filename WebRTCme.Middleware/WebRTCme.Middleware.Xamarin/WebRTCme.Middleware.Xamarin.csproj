<Project Sdk="MSBuild.Sdk.Extras/2.1.2">
	
    <PropertyGroup>
	    <TargetFrameworks>netstandard2.0; MonoAndroid10.0; Xamarin.iOS10</TargetFrameworks>
		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>
		<RootNamespace>WebRtcMiddlewareXamarin</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <AssemblyName>WebRTCme.Middleware.Xamarin</AssemblyName>
		<LangVersion>9.0</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="*.cs" />
		<UpToDateCheckInput Include="Android\**\*.cs" />
		<UpToDateCheckInput Include="iOS\**\*.cs" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
		<Compile Include="Android\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
		<Compile Include="iOS\**\*.cs" />
	</ItemGroup>

	
	<ItemGroup>
	  <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
	  <PackageReference Include="Xamarin.Forms" Version="4.8.0.1560" />
	</ItemGroup>
	
	<ItemGroup>
	  <ProjectReference Include="..\..\WebRTCme.SignallingServerClient\WebRTCme.SignallingServerClient.csproj" />
	  <ProjectReference Include="..\..\WebRTCme\WebRTCme.csproj" />
	  <ProjectReference Include="..\WebRTCme.Middleware.Api\WebRTCme.Middleware.Api.csproj" />
	</ItemGroup>

</Project>
