<Project Sdk="MSBuild.Sdk.Extras/2.1.2">

	<PropertyGroup>
        <TargetFrameworks>netstandard2.0; net5; MonoAndroid10.0; Xamarin.iOS10; </TargetFrameworks>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<LangVersion>9.0</LangVersion>		
        <RootNamespace>WebRtc</RootNamespace>
    </PropertyGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="*.cs" />
		<UpToDateCheckInput Include="Web\**\*.cs" />
		<UpToDateCheckInput Include="Android\**\*.cs" />
		<UpToDateCheckInput Include="iOS\**\*.cs" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
		<ProjectReference Include="..\WebRTCme.Bindings\WebRTCme.Bindings.Web\WebRTCme.Bindings.Web.csproj" />
		<Compile Include="Web\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('net5')) ">
		<ProjectReference Include="..\WebRTCme.Bindings\WebRTCme.Bindings.Web\WebRTCme.Bindings.Web.csproj" />
		<Compile Include="Web\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
		<ProjectReference Include="..\WebRTCme.Bindings\Xamarin\WebRTCme.Bindings.Xamarin.Android\WebRTCme.Bindings.Xamarin.Android.csproj" />
		<PackageReference Include="Xamarin.Essentials" Version="1.6.0" />
		<Compile Include="Android\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
		<!-- !!! BEWARE: Intellisense DOES NOT work for iOS binding project. -->
		<ProjectReference Include="..\WebRTCme.Bindings\Xamarin\WebRTCme.Bindings.Xamarin.iOS\WebRTCme.Bindings.Xamarin.iOS.csproj" />
		<Compile Include="iOS\**\*.cs" />
	</ItemGroup>




	
	<ItemGroup>
		<ProjectReference Include="..\WebRTCme.Api\WebRTCme.Api.csproj" />
		<PackageReference Include="Microsoft.JSInterop" Version="3.1.10" Condition="'$(TargetFramework)' != 'net5'" />
		<PackageReference Include="Microsoft.JSInterop" Version="5.0.1" Condition="'$(TargetFramework)' == 'net5'" />
		<PackageReference Include="Xamarin.Essentials" Version="1.6.1" />
	</ItemGroup>



</Project>


