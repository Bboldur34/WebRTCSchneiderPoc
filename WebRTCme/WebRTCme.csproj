<Project Sdk="MSBuild.Sdk.Extras/2.1.2">

	<PropertyGroup>
        <TargetFrameworks>netstandard2.1; MonoAndroid10.0; Xamarin.iOS10; net5; </TargetFrameworks>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<LangVersion>8.0</LangVersion>		
        <RootNamespace>WebRtc</RootNamespace>
    </PropertyGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="*.cs" />
		<UpToDateCheckInput Include="WebWasm\**\*.cs" />
		<UpToDateCheckInput Include="Android\**\*.cs" />
		<UpToDateCheckInput Include="iOS\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
		<ProjectReference Include="..\PlatformBindings\Web\Wasm\Wasm.csproj" />
		<Compile Include="IWebRtc.cs" />
		<Compile Include="CrossWebRtc.cs" />
		<Compile Include="WebWasm\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
		<ProjectReference Include="..\PlatformBindings\Xamarin\Android\Android.csproj" />
		<Compile Include="IWebRtc.cs" />
		<Compile Include="CrossWebRtc.cs" />
		<Compile Include="Android\**\*.cs" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
		<!-- !!! BEWARE: Intellisense DOES NOT work for iOS binding project. -->
		<ProjectReference Include="..\PlatformBindings\Xamarin\iOS\iOS.csproj" />
		<Compile Include="IWebRtc.cs" />
		<Compile Include="CrossWebRtc.cs" />
		<Compile Include="iOS\**\*.cs" />
	</ItemGroup>




	

	<ItemGroup>
		<PackageReference Include="Microsoft.JSInterop" Version="3.1.9" />
		<ProjectReference Include="..\WebRTCme.Api\WebRTCme.Api.csproj" />
	</ItemGroup>




	

	<ItemGroup>
	  <UpToDateCheckInput Remove="CrossWebRtcAsync.cs" />
	  <UpToDateCheckInput Remove="IWebRtcAsync.cs" />
	</ItemGroup>

</Project>


