<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:webRtc="clr-namespace:WebRtcGuiXamarin;assembly=WebRTCme.Gui.Xamarin"
             x:Class="DemoApp.Views.VideoPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Red">
            <Label Text="Welcome to Xamarin.Forms!" BackgroundColor="Green"/>
            <webRtc:Video Type="Local" Source="{Binding LocalSource}" BackgroundColor="Orange" 
                          VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <!--<webRtc:Video Type="Remote" Source="{Binding RemoteSource}" Options="Option1" BackgroundColor="Orange" 
                        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>-->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>